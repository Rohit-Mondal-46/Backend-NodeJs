<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<body> 
    <h1>Url Shortner</h1>
    <form method="POST" action="/url/post">
        <label for="url">Enter Url:</label>
        <input type="text" name="url" placeholder="One@example.com">
        <button type="submit">Generate</button>
    </form>

    <% if (locals.id) { %>
        <p><b>Url Generated: </b> http://localhost:3001/url/<%= id %></p>
    <% } %>
    
    <% if (locals.urls) { %>
        <table border="1px">
            <thead>
                <th>Sl. Num</th>
                <th>Short Url</th>
                <th>Redirected to</th>
                <th>Total Clicks</th>
            </thead>
            <tbody>
                    <% urls.forEach((url,i) => { %>
                        <tr>
                            <td><%= i+1 %></td>
                            <td>http://localhost:3001/url/<%= url.shortUrlId %></td>
                            <td><%= url.originalUrl %></td>
                            <td><%= url.visitedHistory.length %></td>
                        </tr>
                    <% }) %>
            </tbody>
        </table>
    <% } %>
</body>
</html>